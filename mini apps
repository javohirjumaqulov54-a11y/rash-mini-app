<body>
  <div class="container">
    <h1>üìä Rasch Model Baholash</h1>
    <p>Har bir savolga javobni belgilang:</p>

    <div id="questions"></div>

    <button onclick="calculateResult()">‚úÖ Natijani hisoblash</button>
    <div id="result" class="result"></div>

    <div class="footer">¬© 2025 Rasch Model Mini App</div>
  </div>

  <script>
    const totalQuestions = 10;
    const questionsDiv = document.getElementById("questions");

    let answers = Array(totalQuestions).fill(null);

    for (let i = 0; i < totalQuestions; i++) {
      const div = document.createElement("div");
      div.className = "question";
      div.innerHTML = `
        <span>${i + 1}-savol</span>
        <div>
          <button onclick="setAnswer(${i}, 1)">To‚Äòg‚Äòri</button>
          <button onclick="setAnswer(${i}, 0)">Noto‚Äòg‚Äòri</button>
        </div>
      `;
      questionsDiv.appendChild(div);
    }

    function setAnswer(index, value) {
      answers[index] = value;
    }

    function calculateResult() {
      if (answers.includes(null)) {
        alert("Iltimos, barcha savollarga javob bering!");
        return;
      }

      const sum = answers.reduce((a, b) => a + b, 0);
      const p = sum / totalQuestions;

      // Rasch modeli bo‚Äòyicha taxminiy theta (logit shaklida)
      const theta = Math.log(p / (1 - p));

      let level = "";
      if (theta < -0.5) level = "Past daraja";
      else if (theta < 0.5) level = "O‚Äòrta daraja";
      else level = "Yuqori daraja";

      document.getElementById("result").innerHTML = `
        <p>üìà Qobiliyat (Œ∏): <b>${theta.toFixed(2)}</b></p>
        <p>‚≠ê Baholash: <b>${level}</b></p>
      `;
    }
  </script>
